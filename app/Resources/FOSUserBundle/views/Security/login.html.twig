        <link href='https://fonts.googleapis.com/css?family=Shadows+Into+Light' rel='stylesheet' type='text/css'>
  </head>
   
<body class="sfondogelato">

{% trans_default_domain 'FOSUserBundle' %}
{% block fos_user_content %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
      
            <nav class="navbar">
                <ul class="navigation">
                    <li class="left"><a type="button" id="modal_trigger" data-target="#modal" data-toggle="modal" href="/login" class="btn">Login</a></li>
                    <li class="logo"><a href="{{ url('gelato_homepage') }}"><img src="img/pittogramma.png" alt="logo"></a></li>
                    <li class="right"><a href="{{ url('gelato_contatti') }}">Contatti</a></li>
                </ul>
            </nav>

<div class="box">

        <div class="brand">
          <a href="/"><img src="img/logo_completo.png" alt="logo"></a>
        </div>

        <div class="box_login">
          <h2>LOGIN</h2>
        
    <form action="{{ path("fos_user_security_check") }}" method="post">
      <div class="compilazione">

       <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
         <label for="username">{{ 'security.login.username'|trans }}</label>
       
       <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
         <label for="password">{{ 'security.login.password'|trans }}</label>
    
       <input type="password" id="password" name="_password" required="required" placeholder="Password" />
    
       <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
         <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>

       <input type="submit" class="one_half last" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />

    
