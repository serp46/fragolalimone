<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}{% endblock %}</title>

        {% block stylesheets %}
        <link type="text/css" href="{{ asset('css/reset.css') }}" rel="stylesheet">
        <link type="text/css" href="{{ asset('css/style.css') }}" rel="stylesheet">
        <link rel="stylesheet" href="http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css" />
        {% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href='https://fonts.googleapis.com/css?family=Shadows+Into+Light' rel='stylesheet' type='text/css'>
    
    </head>
    <body class="sfondogelato">
    
        {% block nav %}
            <nav class="navbar">
                
              <ul class="navigation">

                  {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    
                    <li class="left"><a href="{{ path('gelato_profilo_utente') }}">Ciao {{ app.user.username }} - </a></li>

                    <li class="left"><a href="{{ path('fos_user_security_logout') }}">Logout</a></li>

                    <li class="logo"><a href="{{ url('gelato_homepage') }}"><img src="{{ asset('img/pittogramma.png') }}" alt="logo"></a></li>

                    <li class="right"><a href="{{ url('gelato_contatti') }}">Contatti</a></li>

                {% else %}

                
                    <li class="left"><a type="button" href="/login" class="btn">Login -</a></li>

                    <li class="left"><a type="button" href="{{ url('fos_user_registration_register') }}" class="btn">Registrati</a></li>

                    <li class="logo"><a href="{{ url('gelato_homepage') }}"><img src="img/pittogramma.png" alt="logo"></a></li>

                    <li class="right"><a href="{{ url('gelato_contatti') }}">Contatti</a></li>
               
                
                {% endif %}

                </ul>
            </nav>
        {% endblock %}

        {% block body %}
        {% endblock %}

        <!-- {% block javascripts %}
        <script type="text/javascript" src="{{ asset('js/jquery-1.11.0.min.js') }}"></script>
        {% endblock %} --> 
    </body>
</html>
